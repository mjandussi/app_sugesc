# PostgreSQL rodando localmente (ajuste a porta se necessário)
# Porta 5433 é comum quando já existe outra instância na 5432
db_url = "postgresql+psycopg2://postgres:SUA_SENHA_LOCAL@localhost:5433/lme_db"

# Se sua porta local for a padrão (5432):
# db_url = "postgresql+psycopg2://postgres:SUA_SENHA_LOCAL@localhost:5432/lme_db"


